<div class="container">
	<div class="row">
		<h1>ログイン画面</h1>
		<%= form_with(scope: :session, url: login_path, local: true) do |f| %>
			<%= f.label :email %>
			<%= f.text_field :email %><br>
			<%= f.label :password %>
			<%= f.text_field :password %><br>
			<%= f.submit 'ログイン' %>
		<% end %>
	</div>
</div>