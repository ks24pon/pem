<div class="container">
	<div class="row">
		<h1>ログイン画面</h1>
		<%= form_with(scope: :session, url: login_path, local: true) do |f| %>
			<%= f.label :email, 'メールアドレス' %>
			<%= f.text_field :email, class: 'form-control' %><br>
			<%= f.label :password, 'パスワード' %>
			<%= f.text_field :password, class: 'form-control'%><br>
			<div><%= f.submit 'ログイン', class: "btn btn-primary btn-lg" %></div><br>
		<% end %>
			<div><%= link_to '新規登録', signup_new_path, class: "btn btn-info btn-lg" %></div>
	</div>
</div>