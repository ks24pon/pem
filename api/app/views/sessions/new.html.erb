<div class="container">
	<div class="row">
		<h1>ログイン画面</h1>
		<body>
		<div id="login">
			<h3 class="text-center text-white pt-50">Login form</h3>
			<div class="container">
				<div id="login-row" class="row justify-content-center align-items-center">
					<div id="login-column" class="col-md-6">
						<div id="login-box" class="col-md-12">
						<form id="login-form" class="form" action="" method="post">
						<h3 class="text-center text-info">ログイン</h3>
						<%= form_with(scope: :session, url: login_path, local: true) do |f| %>
							<div class="form-group">
								<%= f.label :email, 'メールアドレス：', class: "text-info" %>
								<%= f.text_field :email, class: 'form-control' %><br>
							</div>
							<div class="form-group">
								<%= f.label :password, 'パスワード：', class: "text-info" %>
								<%= f.text_field :password, class: 'form-control'%><br>
							</div>
							<div><%= f.submit 'ログイン', class: "btn btn-info btn-lg" %></div><br>
							<div><%= f.submit '新規登録', class: "btn btn-primary btn-lg" %></div>
						<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
		</body>
	</div>
</div>