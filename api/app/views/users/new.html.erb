<div class="container">
	<div class="row">
		<h1>ユーザー登録画面</h1>
		<%= form_with(model: @user, url: users_create_path, method: :post, local: true) do |f| %>
			<div><%= f.label :name, 'ニックネーム' %></div>
			<div><%= f.text_field :name, class: 'form-control' %></div>
			
			<div><%= f.label :email, 'メールアドレス' %></div>
			<div><%= f.text_field :email, class: 'form-control' %></div>
			
			<div><%= f.label :age, '年齢', class:'control-label' %></div>
			<div>
				<%= f.select :age, [["",""], ["10代","10"], ["20代","20"], ["30代","30"], ["40代","40"], ["50代","50"], ["60代","60"], ["70代以上","70"] ], {},   class: 'form-control' %>
			</div>
			
			<div><%= f.label :sex, '性別', class:'control-label' %></div>
			<div><%= f.select :sex, [["",""], ["女性","女性"], ["男性","男性"]], {},   class: 'form-control' %></div>
			
			<div><%= f.label :live, '地域（県や市など）' %></div>
			<div><%= f.text_field :live, class: 'form-control' %></div>
			
			<div><%= f.label :password, 'パスワード' %></div>
			<div><%= f.text_field :password, class: 'form-control' %></div>

			<div><%= f.label :password_confirmation, 'パスワード(再確認)' %></div>
			<div><%= f.text_field :password_confirmation, class: 'form-control' %></div><br>
			
			<div class="al-c"><%= f.submit 'プロフィール編集を完了する', class: 'btn btn-primary' %></div>
		<% end %>
	</div>
</div>
 