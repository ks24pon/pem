<div class="container">
	<div class="row">
		<h2 class="text-center p-5">ユーザー登録画面</h2>
		<%= form_with(model: @user, url: users_create_path, method: :post, local: true) do |f| %>
			<div><%= f.label :name, 'ニックネーム' %><span> ※</span></div>
			<div><%= f.text_field :name, class: 'form-control', placeholder: 'ニックネーム' %></div>
			
			<div><%= f.label :email, 'メールアドレス' %><span> ※</span></div>
			<div><%= f.text_field :email, class: 'form-control', placeholder: 'メールアドレス' %></div>
			<div class="row">
  			<div class="form-group col-md-6 mb-3">
					<div><%= f.label :age, '年齢', class:'control-label' %><span> ※</span></div>
						<div>
							<%= f.select :age, [["",""], ["10代","10"], ["20代","20"], ["30代","30"], ["40代","40"], ["50代","50"], ["60代","60"], ["70代以上","70"] ], {},   class: 'form-control' %>
						</div>
					</div>
				<div class="form-group col-md-6 mb-3">
					<div><%= f.label :sex, '性別', class:'control-label' %><span> ※</span></div>
					<div><%= f.select :sex, [["",""], ["女性","女性"], ["男性","男性"]], {},   class: 'form-control' %></div>
				</div>
			</div>
			
			<div><%= f.label :live, '地域（県や市など）' %><span> ※</span></div>
			<div><%= f.text_field :live, class: 'form-control' %></div>
			
			<div><%= f.label :password, 'パスワード' %><span> ※</span></div>
			<div><%= f.text_field :password, class: 'form-control' %></div>

			<div><%= f.label :password_confirmation, 'パスワード(再確認)' %><span> ※</span></div>
			<div><%= f.text_field :password_confirmation, class: 'form-control' %></div><br>
			
			<div class="d-grid mb-3">
				<%= f.submit 'プロフィール登録を完了する', class: 'btn btn-primary' %></div>
			</div>
		<% end %>
	</div>
</div>
 